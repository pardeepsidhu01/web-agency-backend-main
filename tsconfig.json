{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        // "module": "NodeNext",
        // "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2016",
        "sourceMap": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true
    }
}
